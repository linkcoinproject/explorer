<!DOCTYPE html>
<html lang="en">
    <head>
        <!-- 1. Core Meta -->
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="description" content="<%= config.explorerName %> - Blockchain explorer for <%= config.coinName %>">
        <meta name="theme-color" content="#1e40af"> <!-- warna tema browser & mobile -->
    
        <!-- 2. Favicon & Apple Touch Icon (urutan penting!) -->
        <link rel="icon" type="image/svg+xml" href="/img/lnc4.svg">
        <link rel="alternate icon" href="/img/favicon.ico">
        <link rel="shortcut icon" href="/img/favicon.ico">
        <link rel="apple-touch-icon" sizes="180x180" href="/img/apple-touch-icon.png">
    
        <!-- 3. Title -->
        <title><%= title %> | <%= config.explorerName %></title>
    
        <!-- 4. Preconnect & Font (Google Fonts Inter) -->
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    
        <!-- 5. CSS External -->
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" integrity="sha512-Kc323vGBEqzTmouAECnVceyQqyqdsSiqLQISBL29aUW4U/M7pSPA/gEUZQqv1cwx4OnYxTxve5UMg5GT6L4JJg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
        <link rel="stylesheet" href="/css/style.css?v=<%= new Date().getTime() %>"> <!-- cache busting -->
    
        <!-- 6. Critical Scripts (Chart.js + Silence Wallet Spam) -->
        <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.4/dist/chart.umd.min.js"></script>
    
        <!-- Optional: Tambahkan preload untuk aset penting -->
        <link rel="preload" href="/css/style.css" as="style">
        <link rel="preload" href="/img/lnc4.svg" as="image">
    </head>

<body>
    <script>
        // Initialize theme from localStorage before render to prevent flash
        (function () {
            const savedTheme = localStorage.getItem('theme') || 'dark';
            document.documentElement.setAttribute('data-theme', savedTheme);
        })();
    </script>
    <!-- Navigation -->
    <nav class="navbar">
        <div class="nav-container">
            <a href="/" class="nav-brand">
                <img src="<%= config.logoUrl %>" alt="<%= config.coinName %>" class="logo-img">
                <span>
                    <%= config.explorerName %>
                </span>
            </a>

            <form class="search-form" action="/search" method="GET">
                <i class="fas fa-search search-icon"></i>
                <input type="text" name="q" placeholder="Search block, transaction, or address..." class="search-input">
            </form>

            <div class="nav-links">
                <a href="/" class="nav-link <%= page === 'dashboard' ? 'active' : '' %>">
                    <i class="fas fa-chart-line"></i>
                    <span>Dashboard</span>
                </a>
                <a href="/blocks" class="nav-link <%= page === 'blocks' ? 'active' : '' %>">
                    <i class="fas fa-cube"></i>
                    <span>Blocks</span>
                </a>
                <a href="/transactions" class="nav-link <%= page === 'transactions' ? 'active' : '' %>">
                    <i class="fas fa-exchange-alt"></i>
                    <span>Transactions</span>
                </a>
                <a href="/statistics" class="nav-link <%= page === 'statistics' ? 'active' : '' %>">
                    <i class="fas fa-chart-bar"></i>
                    <span>Statistics</span>
                </a>
            </div>

            <!-- Theme Toggle -->
            <button class="theme-toggle" onclick="toggleTheme()" title="Toggle theme">
                <i class="fas fa-moon" id="theme-icon"></i>
                <span class="theme-label">Theme</span>
            </button>
        </div>
    </nav>

    <!-- Main Content -->
    <main class="main-content">