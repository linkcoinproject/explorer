<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="<%= config.explorerName %> - Blockchain explorer for <%= config.coinName %>">
    <!-- Add these lines in <head> if not already there -->
    <link rel="icon" type="image/svg+xml" href="/img/lnc4.svg">
    <link rel="alternate icon" href="/img/favicon.ico">
    <link rel="shortcut icon" href="/img/favicon.ico">
    <title>
        <%= title %> | <%= config.explorerName %>
    </title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="/css/style.css">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>

<body>
    <script>
        // Initialize theme from localStorage before render to prevent flash
        (function () {
            const savedTheme = localStorage.getItem('theme') || 'dark';
            document.documentElement.setAttribute('data-theme', savedTheme);
        })();
    </script>
    <!-- Navigation -->
    <nav class="navbar">
        <div class="nav-container">
            <a href="/" class="nav-brand">
                <img src="<%= config.logoUrl %>" alt="<%= config.coinName %>" class="logo-img">
                <span>
                    <%= config.explorerName %>
                </span>
            </a>

            <form class="search-form" action="/search" method="GET">
                <i class="fas fa-search search-icon"></i>
                <input type="text" name="q" placeholder="Search block, transaction, or address..." class="search-input">
            </form>

            <div class="nav-links">
                <a href="/" class="nav-link <%= page === 'dashboard' ? 'active' : '' %>">
                    <i class="fas fa-chart-line"></i>
                    <span>Dashboard</span>
                </a>
                <a href="/blocks" class="nav-link <%= page === 'blocks' ? 'active' : '' %>">
                    <i class="fas fa-cube"></i>
                    <span>Blocks</span>
                </a>
                <a href="/transactions" class="nav-link <%= page === 'transactions' ? 'active' : '' %>">
                    <i class="fas fa-exchange-alt"></i>
                    <span>Transactions</span>
                </a>
                <a href="/statistics" class="nav-link <%= page === 'statistics' ? 'active' : '' %>">
                    <i class="fas fa-chart-bar"></i>
                    <span>Statistics</span>
                </a>
            </div>

            <!-- Theme Toggle -->
            <button class="theme-toggle" onclick="toggleTheme()" title="Toggle theme">
                <i class="fas fa-moon" id="theme-icon"></i>
                <span class="theme-label">Theme</span>
            </button>
        </div>
    </nav>

    <!-- Main Content -->
    <main class="main-content">