    <div class="footer-container">
        <div class="footer-brand">
            <img src="<%= config.logoUrl %>" alt="<%= config.coinName %>" class="logo-img small">
            <span>
                <%= config.explorerName %>
            </span>
        </div>
        <div class="footer-text">
            <%= config.coinTagline %>
        </div>
        <div class="footer-links">
            <% if (config.websiteUrl) { %>
                <a href="<%= config.websiteUrl %>" target="_blank" rel="noopener">
                    <i class="fas fa-globe"></i> Website
                </a>
                <% } %>
                    <% if (config.githubUrl) { %>
                        <a href="<%= config.githubUrl %>" target="_blank" rel="noopener">
                            <i class="fab fa-github"></i> GitHub
                        </a>
                        <% } %>
                            <% if (config.telegramUrl) { %>
                                <a href="<%= config.telegramUrl %>" target="_blank" rel="noopener">
